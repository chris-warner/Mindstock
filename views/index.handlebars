<div class="container">
  <img src="assets/img/burger.png">

  <br>
  <h1>Eat Da Burger</h1>

  <div class="flex-container">
    <div>
      <ul>
        {{#each burger}}
          {{#unless devoured}}
            <li>
              {{burger_name}}
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div>
      <ul>
        {{#each burger}}
        {{#unless devoured}}
        <li>
          <button class="eat-burger" data-id="{{this.id}}">Devour It!</button>
        </li>`
        {{/unless}}
        {{/each}}
      </ul>      
    </div>
    <div>
      <ul>
        {{#each burger}}
          {{#if devoured}}
          <li>
            {{burger_name}}
          </li>        
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <form class="create-form">

    <div class="form-group">
      <input type="text" id="burger" name="burger_name">
    </div>

    <button type="submit" class="add-burger">Submit</button>
    <p>Enter a burger you want to eat. Click the "Submit" button to Save</p>
  </form>
</div>